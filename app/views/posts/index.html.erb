<%= render "welcome/toolbar" %>
<div class="header">
<h1>Solution Archive</h1>
</div>
<div class="body">
<table>
  <tr>
    <th style="width:100px"><%= link_to "Problem", posts_path(:sortBy=>:problem)%></th>
    <th>					<%= link_to "Solved By", posts_path(:sortBy=>:name)%></th>
    <th></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td style="text-align: center"><%= link_to post.problem, posts_path(:filterBy=>:problem,:problem=>post.problem) %></td>
      <td>							<%= link_to post.poster, posts_path(:filterBy=>:name,:name=>post.poster) %></td>
      <td>							<%= link_to "view solution", post_path(post) %></td>
      
      
      <!--<td><%= link_to "Edit", edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?'} %></td>
                    -->
    </tr>
  <% end %>
</table>
</div>